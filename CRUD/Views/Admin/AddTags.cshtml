@model CRUD.Models.ViewModels.AddTagRequest;
@{
}


<div class="bg-secondary bg-opacity-10 text-black">
    <div class="container text-center">
        <h1>Add New Tag - ADMIN</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">
